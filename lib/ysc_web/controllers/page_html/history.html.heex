  <%!-- YSC Presidents Grid --%>
  <div class="mb-16">
    <div class="prose prose-zinc prose-a:text-blue-600 mb-8 scroll-mt-24">
      <h2 id="presidents">YSC Presidents</h2>
    </div>

    <div class="not-prose">
      <% # Group presidents by decade
      presidents_by_decade =
        @past_presidents
        |> Enum.group_by(fn {years, _} ->
          years
          |> String.split("-")
          |> List.first()
          |> String.slice(0, 3)
          |> Kernel.<>("0s")
        end)
        |> Enum.sort_by(fn {decade, _} -> decade end) %>
      <%= for {decade, presidents} <- presidents_by_decade do %>
        <div class="mb-8 scroll-mt-24" id={"presidents-#{String.replace(decade, "s", "")}"}>
          <h3 class="text-lg font-bold text-zinc-700 mb-4"><%= decade %></h3>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
            <%= for {years, president} <- presidents do %>
              <% is_founder =
                String.contains?(president, "Arnold Rolkert") ||
                  String.contains?(president, "Gunnar Engen") ||
                  String.contains?(president, "Carlo Hojsgaard")

              is_longest_serving = String.contains?(president, "Peter Nordström")
              is_youngest = String.contains?(president, "Andrew Vik")

              badge_text =
                cond do
                  is_founder -> "Founder"
                  is_longest_serving -> "Longest Serving"
                  is_youngest -> "Youngest"
                  true -> nil
                end

              badge_color =
                cond do
                  is_founder -> "bg-amber-100 text-amber-800 border-amber-300"
                  is_longest_serving -> "bg-purple-100 text-purple-800 border-purple-300"
                  is_youngest -> "bg-green-100 text-green-800 border-green-300"
                  true -> ""
                end

              is_tbd = String.contains?(president, "TBD") || String.contains?(years, "present")

              card_bg =
                cond do
                  is_tbd -> "bg-blue-50/50"
                  is_founder -> "bg-amber-50"
                  is_longest_serving -> "bg-purple-50"
                  is_youngest -> "bg-green-50"
                  true -> "bg-zinc-50"
                end

              card_border =
                cond do
                  is_tbd -> "border-2 border-dashed border-blue-300"
                  is_founder -> "border-2 border-amber-300"
                  is_longest_serving -> "border-2 border-purple-300"
                  is_youngest -> "border-2 border-green-300"
                  true -> "border border-zinc-100"
                end %>
              <div class={[
                "p-4 rounded-lg flex flex-col items-center text-center hover:shadow-md transition-shadow",
                card_bg,
                card_border
              ]}>
                <span class="text-xs font-bold text-blue-600 uppercase mb-2"><%= years %></span>
                <h4 class="font-bold text-zinc-900 text-sm mb-1 leading-tight">
                  <%= president %>
                </h4>
                <span
                  :if={badge_text}
                  class={[
                    "text-[10px] px-2 py-0.5 rounded-full mt-1 border font-semibold",
                    badge_color
                  ]}
                >
                  <%= badge_text %>
                </span>
                <%= if is_tbd do %>
                  <.link
                    navigate={~p"/contact?subject=Board%20of%20Directors"}
                    class="mt-2 text-xs font-semibold text-blue-600 hover:text-blue-700 hover:underline"
                  >
                    Join Us →
                  </.link>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%!-- Legacy CTA --%>
  <div class="not-prose">
    <div class="bg-gradient-to-br from-blue-50 to-blue-100 border border-blue-200 rounded-3xl p-12 text-center">
      <h3 class="text-3xl font-bold text-zinc-900 mb-4">Be Part of Our Next 75 Years</h3>
      <p class="text-lg text-zinc-700 mb-8 leading-relaxed">
        Join the YSC today and become part of a vibrant community that celebrates Scandinavian heritage, creates lasting memories, and builds lifelong friendships.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <.link
          navigate={~p"/users/register"}
          class="inline-flex items-center justify-center px-8 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
        >
          Join YSC
        </.link>
        <.link
          navigate={~p"/contact"}
          class="inline-flex items-center justify-center px-8 py-3 bg-white text-blue-600 font-semibold rounded-lg border-2 border-blue-600 hover:bg-blue-50 transition-colors"
        >
          Learn More
        </.link>
      </div>
    </div>
  </div>
