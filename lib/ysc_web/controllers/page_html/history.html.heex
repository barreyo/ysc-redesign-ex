        @past_presidents
        |> Enum.group_by(fn {years, _} ->
          years
          |> String.split("-")
          |> List.first()
          |> String.slice(0, 3)
          |> Kernel.<>("0s")
        end)
        |> Enum.sort_by(fn {decade, _} -> decade end) %>
      <%= for {decade, presidents} <- presidents_by_decade do %>
        <div
          class="mb-8 scroll-mt-24"
          id={"presidents-#{String.replace(decade, "s", "")}"}
        >
          <h3 class="text-lg font-bold text-zinc-700 mb-4"><%= decade %></h3>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
            <%= for {years, president} <- presidents do %>
              <% is_founder =
                String.contains?(president, "Arnold Rolkert") ||
                  String.contains?(president, "Gunnar Engen") ||
                  String.contains?(president, "Carlo Hojsgaard")

              is_longest_serving =
                String.contains?(president, "Peter Nordström")

              is_youngest = String.contains?(president, "Andrew Vik")

              # Legacy badges for major milestones
              is_clear_lake_purchase =
                String.contains?(president, "Lisa") &&
                  String.contains?(years, "1961")

              is_tahoe_purchase = String.contains?(years, "1993")

              badge_text =
                cond do
                  is_founder -> "Founder"
                  is_longest_serving -> "Longest Serving"
                  is_youngest -> "Youngest"
                  is_clear_lake_purchase -> "Purchased Clear Lake"
                  is_tahoe_purchase -> "Purchased Tahoe"
                  true -> nil
                end

              badge_color =
                cond do
                  is_founder ->
                    "bg-amber-100 text-amber-800 border-amber-300"

                  is_longest_serving ->
                    "bg-purple-100 text-purple-800 border-purple-300"

                  is_youngest ->
                    "bg-green-100 text-green-800 border-green-300"

                  is_clear_lake_purchase ->
                    "bg-orange-100 text-orange-800 border-orange-300"

                  is_tahoe_purchase ->
                    "bg-orange-100 text-orange-800 border-orange-300"

                  true ->
                    ""
                end

              is_tbd =
                String.contains?(president, "TBD") ||
                  String.contains?(years, "present")

              # Determine if card should be grayscale (1950s-1980s)
              decade_start =
                years
                |> String.split("-")
                |> List.first()
                |> String.to_integer()

              is_historical = decade_start < 1990
              is_founding_era = decade_start >= 1950 && decade_start < 1980

              card_bg =
                cond do
                  is_tbd -> "bg-blue-50/50"
                  is_founder -> "bg-amber-50"
                  is_longest_serving -> "bg-purple-50"
                  is_youngest -> "bg-green-50"
                  true -> "bg-zinc-50"
                end

              texture_bg =
                if is_founding_era,
                  do:
                    "bg-[url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%220.02%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]",
                  else: ""

              card_border =
                cond do
                  is_tbd -> "border-2 border-dashed border-blue-300"
                  is_founder -> "border-2 border-amber-300"
                  is_longest_serving -> "border-2 border-purple-300"
                  is_youngest -> "border-2 border-green-300"
                  true -> "border border-zinc-100"
                end %>
              <div class={[
                "p-4 rounded-lg flex flex-col items-center text-center transition-all duration-300 relative",
                card_bg,
                texture_bg,
                card_border,
                if(is_historical, do: "grayscale hover:grayscale-0", else: "")
              ]}>
                <span class="text-xs font-bold text-blue-600 uppercase mb-2">
                  <%= years %>
                </span>
                <h4 class="font-bold text-zinc-900 text-sm mb-1 leading-tight">
                  <%= president %>
                </h4>
                <span
                  :if={badge_text}
                  class={[
                    "text-[10px] px-2 py-0.5 rounded-full mt-1 border font-semibold",
                    badge_color
                  ]}
                >
                  <%= badge_text %>
                </span>
                <%= if is_tbd do %>
                  <.link
                    navigate={~p"/contact?subject=Board%20of%20Directors"}
                    class="mt-2 text-xs font-semibold text-blue-600 hover:text-blue-700 hover:underline"
                  >
                    Join Us →
                  </.link>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%!-- Legacy CTA --%>
  <div class="not-prose">
    <div class="bg-zinc-900 rounded-[3rem] p-12 lg:p-20 text-center relative overflow-hidden">
      <div class="absolute inset-0 flex items-center justify-center opacity-5 pointer-events-none select-none">
        <span class="text-[20rem] font-black text-white">75</span>
      </div>

      <div class="relative z-10">
        <h3 class="text-4xl md:text-5xl font-black text-white mb-6 tracking-tight">
          Write the Next Chapter.
        </h3>
        <p class="text-xl text-zinc-400 mb-10 max-w-2xl mx-auto leading-relaxed">
          Our history isn't just about the past—it's about the families and friends who will steward these cabins for the next 75 years.
          <strong class="text-white"> Will you be one of them?</strong>
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <.link
            navigate={~p"/users/register"}
            class="px-10 py-4 bg-blue-600 text-white font-black rounded-2xl hover:bg-blue-700 transition-all hover:scale-105 shadow-xl shadow-blue-600/20"
          >
            Become a Member
          </.link>
          <.link
            navigate={~p"/contact"}
            class="px-10 py-4 bg-white/10 text-white font-bold rounded-2xl border border-white/20 hover:bg-white/20 transition-all backdrop-blur-md"
          >
            Ask a Question
          </.link>
        </div>
      </div>
    </div>
  </div>
</div>
